<div class='field field--password'>
  <label
    for='{{name}}'
    class='field__label'
  >{{label}}</label>

  <div class='field__wrapper'>
    <input
      type='password'
      class='field__input'
      name='{{name}}'
      value='{{value}}'
      placeholder='{{placeholder}}'
      oninput='signup.change(this.name, this.value)'
    />
    <span
      onclick='FieldPassword.toggle(this)'
      class='field__icon'
    ></span>
  </div>
</div>